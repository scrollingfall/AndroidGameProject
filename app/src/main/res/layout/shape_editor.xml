<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="10"
    android:columnCount="5"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true">

        <!-- First Row -->

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:padding="5sp"
            android:textSize="30sp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:inputType="text"
            android:id="@+id/shapeName"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="X"
            android:padding="5sp"
            android:textSize="30sp"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="1"
            android:inputType="numberDecimal"
            android:id="@+id/shapeX"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Y"
            android:padding="5sp"
            android:textSize="30sp"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="2"
            android:inputType="numberDecimal"
            android:id="@+id/shapeY"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Width"
            android:padding="5sp"
            android:textSize="30sp"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="3"
            android:inputType="numberDecimal"
            android:id="@+id/shapeWidth"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Height"
            android:padding="5sp"
            android:textSize="30sp"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="4"
            android:inputType="numberDecimal"
            android:id="@+id/shapeHeight"
            />

        <!-- Second Row -->


        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="0"
            android:padding="5sp"
            android:text="Movable"
            android:textSize="20sp"
            android:id="@+id/movable"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:padding="5sp"
            android:layout_column="0"
            android:textSize="20sp"
            android:text="Visible"
            android:id="@+id/visible"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:padding="5sp"
            android:layout_column="0"
            android:textSize="20sp"
            android:text="Image: " />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_row="3"
        android:padding="5sp"
        android:spinnerMode="dropdown"
        android:id="@+id/imageSpinner" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_row="4"
        android:padding="5sp"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:hint="Text (Optional)"
        android:textSize="20sp"
        android:id="@+id/shapeText"
    />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:inputType="number"
        android:layout_row="4"
        android:padding="5sp"
        android:layout_column="3"
        android:layout_columnSpan="2"
        android:hint="Font Size"
        android:textSize="20sp"
        android:id="@+id/shapeFont"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="4"
        android:layout_columnWeight="1"
        android:text="Add"
        android:onClick="addClicked"

     />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_row="5"
        android:layout_column="0"
        android:textSize="20sp"
        android:text="ADD SCRIPTS"
        android:padding="5sp"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_row="7"
        android:layout_column="0"
        android:textSize="20sp"
        android:text="SCRIPT PREVIEW"
        android:padding="5sp"
        />

    <Spinner
        android:id="@+id/trigger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_row="6"
        android:layout_column="0"
        android:padding="5sp"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_row="6"
        android:layout_column="1"
        android:padding="5sp"
        android:id="@+id/shapeSpinner"

        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_row="6"
        android:layout_column="2"
        android:padding="5sp"
        android:id="@+id/actionSpinner"

        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_row="6"
        android:layout_column="3"
        android:padding="5sp"
        android:id="@+id/resourceSpinner"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="3"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_row="8"
        android:layout_column="0"
        android:hint="Scripts will show up here"
        android:id="@+id/shapePreview"
    />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_row="9"
        android:layout_column="0"
        android:text="Remove Most Recent"
        android:onClick="removePrevPressed"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_row="9"
        android:layout_column="3"
        android:text="Cancel"
        android:onClick="cancelPressed"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_row="9"
        android:layout_column="4"
        android:text="Save"
        android:onClick="savePressed"

        />



</GridLayout>