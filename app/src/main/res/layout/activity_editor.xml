<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.stanford.cs108.bunnyworldplayer.EditorActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:columnCount="4"
        android:rowCount="1"
        android:id="@+id/topGrid">
        <TextView
            android:id="@+id/actionsList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="2"
            android:text="Actions: "/>
        <TextView
            android:id="@+id/resourcesList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="2"
            android:text="Resources: "/>
        <TextView
            android:id="@+id/namesList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="2"
            android:text="Names: "/>
        <Button
            android:id="@+id/saveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="SAVE PAGE"/>
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:columnCount="2"
        android:rowCount="1">
        <TextView
            android:layout_column="0"
            android:id="@+id/previewArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preview Area"/>
        <TextView
            android:layout_column="1"
            android:id="@+id/Suggestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Suggestion"/>

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:columnCount="3"
        android:rowCount="1"
        android:id="@+id/bottom_grid">
        <TextView
            android:id="@+id/pageList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="2"
            android:text="Page List: "/>
        <TextView
            android:id="@+id/shapeList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="2"
            android:text="Shape List: "/>
    </GridLayout>

</RelativeLayout>
